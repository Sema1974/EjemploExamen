<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExaMainActivity"
    android:background="@color/fondoapp"
    android:paddingHorizontal="16dp"
    android:paddingVertical="16dp">
    <LinearLayout
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="12dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bar_tolo"
            android:textSize="50sp"
            android:layout_margin="12dp"
            android:textColor="@color/texto"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/medos"
        android:layout_width="0dp"
        android:layout_height="110dp"
        app:cardBackgroundColor="@color/fondo"
        app:layout_constraintTop_toBottomOf="@id/titulo"
        app:cardCornerRadius="16dp"
        android:layout_margin="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mecuatro"
        android:foregroundGravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="12dp">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/table_svgrepo_com"
                app:tint="@color/texto"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 asientos"
                android:textSize="12sp"
                android:textColor="@color/texto"/>
       </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/mecuatro"
        android:layout_width="0dp"
        android:layout_height="110dp"
        app:cardBackgroundColor="@color/fondo"
        app:layout_constraintTop_toBottomOf="@id/titulo"
        app:cardCornerRadius="16dp"
        android:layout_margin="12dp"
        app:layout_constraintStart_toEndOf="@+id/medos"
        app:layout_constraintEnd_toStartOf="@+id/meocho"
        android:foregroundGravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="12dp">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/table_svgrepo_com"
                app:tint="@color/texto"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 asientos"
                android:textSize="12sp"
                android:textColor="@color/texto"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/meocho"
        android:layout_width="0dp"
        android:layout_height="110dp"
        app:cardBackgroundColor="@color/fondo"
        app:layout_constraintTop_toBottomOf="@id/titulo"
        app:cardCornerRadius="16dp"
        android:layout_margin="12dp"
        app:layout_constraintStart_toEndOf="@+id/mecuatro"
        app:layout_constraintEnd_toEndOf="parent"
        android:foregroundGravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="12dp">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/table_svgrepo_com"
                app:tint="@color/texto"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8 asientos"
                android:textSize="12sp"
                android:textColor="@color/texto"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/texnombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:text="introduce tu nombre"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="@color/texto"
        android:textAlignment="textStart"
        app:layout_constraintTop_toBottomOf="@+id/medos"/>
    <EditText
        android:id="@+id/nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text=""
        android:textColor="@color/texto"
        android:background="@color/fondo"
        android:textAlignment="textStart"
        app:layout_constraintTop_toBottomOf="@+id/texnombre"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/texnombre"
        app:layout_constraintStart_toStartOf="parent">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/patras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/left_circle_svgrepo_com"/>
        <TextView
            android:id="@+id/horas"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="20:00"
            android:gravity="center"
            android:background="@color/fondo"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/palante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_circle_svgrepo_com"/>
    </LinearLayout>
    <ImageButton
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/check_circle_svgrepo_com"
        android:background="@color/fondo"
        android:layout_margin="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>